<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simarro.practicas.domotiapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_domotiapp_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/appStyle">
        <activity
            android:name=".app.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.MainMenu"
            android:label="@string/title_activity_main_menu"
            android:icon="@drawable/ic_logo_domotiapp"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".fragments.FragmentSetup"
            android:label="@string/setup"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>

</manifest>